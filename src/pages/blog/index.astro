---
import BaseHead  from '../../components/BaseHead.astro';
import Footer    from '../../components/Footer.astro';
import Header    from '../../components/Header.astro';
import Home3o    from '../../components/Home3o.astro';
import ListPosts from '../../components/ListPosts.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';

import { getCollection } from 'astro:content';

const json_ld = [{
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home", "item": Astro.site },
        { "@type": "ListItem", "position": 2, "name": "All Posts" }
    ]
}];

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="ru">
	<head>
        <BaseHead
            title="Все статьи"
            description="На этой странице собраны все статьи с сайта crafttradebot.ru. Здесь вы найдете полезные материалы, советы и инструкции по теме торговли и автоматизации. Удобный доступ к уникальному контенту в одном месте"
        />
        <script type="application/ld+json" set:html={JSON.stringify(json_ld)} />
	</head>
	<body class="bg-gray-900 text-gray-100">
		<Header />
        <main>
            <ListPosts posts={posts} level={1} title="Все статьи" />
        </main>
        <Home3o />
		<Footer />
	</body>
</html>

