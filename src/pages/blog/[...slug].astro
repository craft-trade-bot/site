---
import BaseHead from '../../components/BaseHead.astro';
import Footer   from '../../components/Footer.astro';
import Header   from '../../components/Header.astro';
import Home3o   from '../../components/Home3o.astro';

import { Image } from 'astro:assets';

import { getCollection, render } from 'astro:content';
const post = Astro.props;
const { Content } = await render(post);

const json_ld = [{
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
        { "@type": "ListItem", "position": 1, "name": "Home",      "item": new URL('/',     Astro.site) },
        { "@type": "ListItem", "position": 2, "name": "All Posts", "item": new URL('blog/', Astro.site) },
        { "@type": "ListItem", "position": 3, "name": post.data.title }
    ]
},{
    "@context": "https://schema.org",
    "@type": "Article",
    "headline": post.data.title,
    "image": [ post.data.heroImage.src ],
    "datePublished": post.data.pubDate.toISOString(),
    "author": [{
        "@type": "Person",
        "name": "Craft Trade",
        "url": Astro.site
    }]
}];

export async function getStaticPaths() {
    const posts = await getCollection('blog');
    return posts.map((post) => ({
        params: { slug: post.id },
        props: post,
    }));
}
---

<!doctype html>
<html lang="ru">
	<head>
		<BaseHead title={post.data.title} description={post.data.description} />
        <script type="application/ld+json" set:html={JSON.stringify(json_ld)} />
    </head>
	<body class="bg-gray-900 text-gray-100">
		<Header />
        <main>
            <div class="mx-auto max-w-3xl xl:max-w-5xl bg-gray-300">
                {post.data.heroImage && (
                 //<Image width={1024} height={512} src={post.data.heroImage} alt={post.data.title} />
                    <div class="bg-cover bg-center h-40 lg:h-60 2xl:h-80" style={`background-image: url(${post.data.heroImage.src})`}></div>
                )}
                <div class="prose max-w-none marker:text-gray-900 p-5">
                    <Content />
                </div>
            </div>
        </main>
        <Home3o />
		<Footer />
	</body>
</html>
