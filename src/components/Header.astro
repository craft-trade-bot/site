---
import { SITE_TITLE, TELEGRAM_BOT, TELEGRAM_CHANNEL, LINK_DOC } from '../consts';
---

<div class="text-gray-100" style="background-color:rgba(0,0,0,0.8);font-weight:800;">
    <header class="container mx-auto px-10 py-5">
        <div class="flex gap-4 lg:gap-0 items-center flex-col lg:flex-row justify-between text-center">
            <a class="hover:text-gray-300 text-xl" href="/">{SITE_TITLE}</a>
            <span class="flex gap-4 sm:gap-8 items-center uppercase text-sm">
                <a class="hover:text-gray-300" href={TELEGRAM_CHANNEL}>Группа в Telegram</a>
                <a class="hover:text-gray-300" href={LINK_DOC}>Статьи</a>
                <a class="hover:text-green-600 text-green-500" href={TELEGRAM_BOT}>Начать торговлю</a>
            </span>
        </div>
    </header>
</div>
